@using DotaDraftSimulator.Models
@model IEnumerable<DotaDraftSimulator.Models.Hero>

@section scripts{
    <link rel="stylesheet" href="~/Content/draft-simulator.css" />
    <script type="text/javascript" src="~/Scripts/hero.js"></script>
    <script type="text/javascript" src="~/Scripts/filters.js"></script>
    <script type="text/javascript" src="~/Scripts/draft.js"></script>
}

<div id="tools-column">
    <div id="selectedHero" class="is-collapsed">
        <p id="selectedHeroName"></p>
        <img id="selectedHeroImg" />
        <div id="stats-div">
            <div><span>Main attribute:</span><img id="main-attribute-img" /></div>
            <div><span>Attack type:</span><img id="attack-type-img" /></div>
            <div><span>Carry:</span><img id="carry-img" class="star-img" /></div>
            <div><span>Mid:</span><img id="mid-img" class="star-img" /></div>
            <div><span>Offlane:</span><img id="offlane-img" class="star-img" /></div>
            <div><span>Support:</span><img id="support-img" class="star-img" /></div>
        </div>
        <button id="decision-button" class="btn btn-danger">Ban</button>
    </div>

    <div id="filters">
        <h5>Filters</h5>
        <div id="attack-type-checkbox-div">
            <span>Attack type: </span>
            <input type="checkbox" id="melee-checkbox" name="Melee" /> <label for="melee-checkbox">Melee</label>
            <input type="checkbox" id="ranged-checkbox" name="Ranged" /> <label for="ranged-checkbox">Ranged</label>
        </div>
        <div id="carry-checkbox-div" class="position-factor-div">
            <span>Carry: </span>
            <input type="checkbox" id="carry-1" name="carry" /> <label for="carry-1">1</label>
            <input type="checkbox" id="carry-2" name="carry" /> <label for="carry-2">2</label>
            <input type="checkbox" id="carry-3" name="carry" /> <label for="carry-3">3</label>
            <input type="checkbox" id="carry-4" name="carry" /> <label for="carry-4">4</label>
            <input type="checkbox" id="carry-5" name="carry" /> <label for="carry-5">5</label>
        </div>
        <div id="mid-checkbox-div" class="position-factor-div">
            <span>Mid: </span>
            <input type="checkbox" id="mid-1" name="mid" /> <label for="mid-1">1</label>
            <input type="checkbox" id="mid-2" name="mid" /> <label for="mid-2">2</label>
            <input type="checkbox" id="mid-3" name="mid" /> <label for="mid-3">3</label>
            <input type="checkbox" id="mid-4" name="mid" /> <label for="mid-4">4</label>
            <input type="checkbox" id="mid-5" name="mid" /> <label for="mid-5">5</label>
        </div>
        <div id="offlane-checkbox-div" class="position-factor-div">
            <span>Offlane: </span>
            <input type="checkbox" id="offlane-1" name="offlane" /> <label for="offlane-1">1</label>
            <input type="checkbox" id="offlane-2" name="offlane" /> <label for="offlane-2">2</label>
            <input type="checkbox" id="offlane-3" name="offlane" /> <label for="offlane-3">3</label>
            <input type="checkbox" id="offlane-4" name="offlane" /> <label for="offlane-4">4</label>
            <input type="checkbox" id="offlane-5" name="offlane" /> <label for="offlane-5">5</label>
        </div>
        <div id="support-checkbox-div" class="position-factor-div">
            <span>Support: </span>
            <input type="checkbox" id="support-1" name="support" /> <label for="support-1">1</label>
            <input type="checkbox" id="support-2" name="support" /> <label for="support-2">2</label>
            <input type="checkbox" id="support-3" name="support" /> <label for="support-3">3</label>
            <input type="checkbox" id="support-4" name="support" /> <label for="support-4">4</label>
            <input type="checkbox" id="support-5" name="support" /> <label for="support-5">5</label>
        </div>
    </div>
</div>


<div id="hero-column">
    <div id="all-heroes-div">
        <h2 id="all-heroes-header">Heroes</h2>
        <div id="str-heroes" class="hero-category-div">
            <h4 id="str-heroes-header" class="header-main-attribute">Strength<img src="../../Images/Attributes/Strength.png" class="header-main-attribute-img" /></h4>
            @{
                foreach (var hero in Model.Where(x => x.Attribute == Hero.MainAttribute.Strength))
                {
                    var imgsrc = "../Images/Heroes/" + @hero.Name + ".png";
                    <div>
                        <img src="@imgsrc" class="hero-img" title="@hero.Name"
                             data-main-attribute=@hero.Attribute data-attack-type=@hero.Attack data-carry="@hero.CarryFactor"
                             data-mid=@hero.MidlaneFactor data-offlane=@hero.OfflaneFactor data-support=@hero.SupportFactor>
                    </div>
                }
            }
        </div>
        <div id="agi-heroes" class="hero-category-div">
            <h4 id="agi-heroes-header" class="header-main-attribute">Agility<img src="../../Images/Attributes/Agility.png" class="header-main-attribute-img" /></h4>
            @{
                foreach (var hero in Model.Where(x => x.Attribute == Hero.MainAttribute.Agility))
                {
                    var imgsrc = "../Images/Heroes/" + @hero.Name + ".png";
                    <div>
                        <img src="@imgsrc" class="hero-img" title="@hero.Name"
                             data-main-attribute=@hero.Attribute data-attack-type=@hero.Attack data-carry="@hero.CarryFactor"
                             data-mid=@hero.MidlaneFactor data-offlane=@hero.OfflaneFactor data-support=@hero.SupportFactor>
                    </div>
                }
            }
        </div>
        <div id="int-heroes" class="hero-category-div">
            <h4 id="int-heroes-header" class="header-main-attribute">Intelligence<img src="../../Images/Attributes/Intelligence.png" class="header-main-attribute-img" /></h4>
            @{
                foreach (var hero in Model.Where(x => x.Attribute == Hero.MainAttribute.Intelligence))
                {
                    var imgsrc = "../Images/Heroes/" + @hero.Name + ".png";
                    <div>
                        <img src="@imgsrc" class="hero-img" title="@hero.Name"
                             data-main-attribute=@hero.Attribute data-attack-type=@hero.Attack data-carry="@hero.CarryFactor"
                             data-mid=@hero.MidlaneFactor data-offlane=@hero.OfflaneFactor data-support=@hero.SupportFactor>
                    </div>
                }
            }
        </div>
    </div>

    <div id="draft-div">
        <div id="hero-draft">
            <div id="radiant-draft">
                <p id="radiant-banner" class="fraction-banner">Radiant</p>
                <div id="radiant-bans">
                    <div id="radiant-ban-1" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                    <div id="radiant-ban-2" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                    <div id="radiant-ban-3" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                    <div id="radiant-ban-4" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                    <div id="radiant-ban-5" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                    <div id="radiant-ban-6" class="ban draft-hero-div"><img class="ban-img" src=""> </div>
                </div>
                <div id="radiant-picks">
                    <div id="radiant-pick-1" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                    <div id="radiant-pick-2" class="pick draft-hero-div"><img class="pick-img" src=""></div>
                    <div id="radiant-pick-3" class="pick draft-hero-div"><img class="pick-img" src=""></div>
                    <div id="radiant-pick-4" class="pick draft-hero-div"><img class="pick-img" src=""></div>
                    <div id="radiant-pick-5" class="pick draft-hero-div"><img class="pick-img" src=""></div>
                </div>
            </div>
            <div id="dire-draft">
                <div id="dire-picks">
                    <div id="dire-pick-1" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                    <div id="dire-pick-2" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                    <div id="dire-pick-3" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                    <div id="dire-pick-4" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                    <div id="dire-pick-5" class="pick draft-hero-div"><img class="pick-img" src=""> </div>
                </div>
                <div id="dire-bans">
                    <div id="dire-ban-1" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                    <div id="dire-ban-2" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                    <div id="dire-ban-3" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                    <div id="dire-ban-4" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                    <div id="dire-ban-5" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                    <div id="dire-ban-6" class="ban draft-hero-div"><img class="ban-img" src=""></div>
                </div>
                <p id="dire-banner" class="fraction-banner">Dire</p>
            </div>
        </div>
        <div id="timer-div">
            <div id="radiant-timers"></div>
            <div id="dire-timers"></div>
        </div>
    </div>
</div>
<p id="typed-hero-name"></p>
